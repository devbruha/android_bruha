    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grey_gradient"
        android:id="@+id/LayoutToChange"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/ImageEventPicture"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/VenueImageBubble"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/round"
            android:alpha=".90"
            android:focusable="false"
            android:layout_weight="5"
            android:adjustViewBounds="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Arkells"
            android:id="@+id/TextEventName"
            android:textSize="20sp"
            android:paddingBottom="8dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/VenueIcon"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="December 25, 2015"
            android:id="@+id/VenueName"
            android:layout_centerInParent="true"
            android:layout_below="@+id/TextEventName"
            android:singleLine="true"
            android:textSize="20dp"
            android:paddingBottom="8dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$25.00"
            android:id="@+id/TextEventPrice"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/VenueName"
            android:textSize="20sp"
            android:paddingBottom="6dp"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/VenueActivityIcon"
            android:layout_below="@+id/TextEventPrice"
            android:layout_centerHorizontal="true"
            android:visibility="visible" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/VenueIcon"
            android:layout_alignTop="@+id/VenueImageBubble"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:paddingBottom="8dp"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#46bec2"
            android:alpha="0.95"
            android:id="@+id/DescriptionLayout"
            android:visibility="invisible"
            android:layout_alignTop="@+id/VenueImageBubble"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/VenueImageBubble">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$25.00"
                android:id="@+id/DesEventPrice"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="17dp"
                android:paddingRight="5dp"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Arkells"
                android:id="@+id/DesVenueName"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="17dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:textColor="#ffffff" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X Lounge"
                android:id="@+id/DesVenueLocName"
                android:layout_below="@+id/DesVenueName"
                android:paddingLeft="5dp"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Machtree St."
                android:id="@+id/DesVenueLocStreet"
                android:layout_below="@+id/DesVenueLocName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="5dp"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GA 319204"
                android:id="@+id/DesVenueLocAddress"
                android:paddingLeft="5dp"
                android:textColor="#ffffff"
                android:layout_alignTop="@+id/DesVenueLocStreet"
                android:layout_toRightOf="@+id/DesVenueLocStreet"
                android:layout_toEndOf="@+id/DesVenueLocStreet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start:"
                android:id="@+id/VenueHourText"
                android:visibility="invisible"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_below="@+id/DesVenueLocAddress"
                android:layout_alignParentLeft="true"
                android:paddingLeft="5dp"
                android:layout_alignParentStart="true"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="May 25, 2015"
                android:id="@+id/DesEventStartDate"
                android:paddingLeft="5dp"
                android:textSize="10dp"
                android:layout_below="@+id/VenueHourText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:30 PM"
                android:id="@+id/DesEventStartTime"
                android:textSize="10dp"
                android:textColor="#ffffff"
                android:layout_alignTop="@+id/DesEventStartDate"
                android:layout_toRightOf="@+id/DesEventStartDate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End:"
                android:id="@+id/PageEndText"
                android:textSize="10dp"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:layout_below="@+id/DesEventStartTime"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="gone"
                android:textColor="#ffffff" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginEnd="24dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"

                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/DesEventCatPic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="May 26,2015"
                    android:id="@+id/DesEventEndDate"
                    android:textSize="10dp"
                    android:textColor="#ffffff"
                    android:layout_below="@+id/DesEventCatPic"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="@+id/DesEventCatPic"/>
            </RelativeLayout>

            <TextView
