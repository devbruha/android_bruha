<?xml version="1.0" encoding="utf-8"?>

<com.daimajia.swipe.SwipeLayout
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FF5534"
        android:gravity="center"
        android:tag="Bottom3"
        android:weightSum="10">

        <ImageView
            android:id="@+id/trash"
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_secure" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Delete Item?"
            android:textColor="#fff"
            android:textSize="17sp" />

        <Button
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:background="#ffffff"
            android:text="Yes,Delete"
            android:textColor="#FF5534" />
    </LinearLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:swipe="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gradient"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:id="@+id/LayoutToChange"
                >





    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ImageEventPicture"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:scaleType="fitXY"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:id="@+id/EventImageBubble"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/round"
        android:alpha=".25"
        android:focusable="false"
        android:layout_weight="5"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Arkells"
        android:id="@+id/TextEventName"
        android:textSize="20sp"
        android:paddingBottom="8dp"

        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ImageEventIcon"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="December 25, 2015"
        android:id="@+id/TextEventDate"
        android:layout_centerInParent="true"
        android:layout_below="@+id/TextEventName"
        android:singleLine="true"
        android:textSize="20dp"
        android:paddingBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$25.00"
        android:id="@+id/TextEventPrice"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/TextEventDate"
        android:textSize="20sp"
        android:paddingBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1km"
        android:id="@+id/TextEventDistance"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/TextEventPrice"
        android:textSize="12dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ImageEventIcon"
        android:src="@android:drawable/ic_secure"
        android:layout_alignTop="@+id/EventImageBubble"
        android:layout_alignLeft="@+id/TextEventDistance"
        android:layout_alignStart="@+id/TextEventDistance"
        android:layout_marginTop="10dp"
        android:paddingBottom="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffa2d8d8"
        android:alpha="0.55"
        android:id="@+id/DescriptionLayout"
        android:layout_alignTop="@+id/EventImageBubble"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/EventImageBubble"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$25.00"
            android:id="@+id/DesEventPrice"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Arkells"
            android:id="@+id/DesEventName"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/testround"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X Lounge"
            android:id="@+id/DesEventLocName"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Machtree St."
            android:id="@+id/DesEventLocStreet"
            android:layout_below="@+id/DesEventLocName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GA 319204"
            android:id="@+id/DesEventLocAddress"
            android:layout_below="@+id/DesEventLocStreet"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start:"
            android:id="@+id/textView4"
            android:textSize="10dp"
            android:layout_below="@+id/DesEventLocAddress"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="May 25, 2015"
            android:id="@+id/DesEventStartDate"
            android:textSize="10dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:30 PM"
            android:id="@+id/DesEventStartTime"
            android:textSize="10dp"
            android:layout_below="@+id/DesEventStartDate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End:"
            android:id="@+id/textView3"
            android:textSize="10dp"
            android:layout_below="@+id/DesEventStartTime"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="May 26,2015"
            android:id="@+id/DesEventEndDate"
            android:textSize="10dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:00 AM"
            android:id="@+id/DesEventEndTime"
            android:textSize="10dp"
            android:layout_below="@+id/DesEventEndDate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>


</RelativeLayout>
    </com.daimajia.swipe.SwipeLayout>