    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/MapMainLayout"
        android:padding="10dp"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:id="@+id/eventList"
            android:background="#e0e0e0"
            android:weightSum="10">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/eventImage"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="#eeeeee"
                android:weightSum="2">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Tatti Scene Awnnn"
                        android:textStyle="bold"
                        android:id="@+id/eventTitle"
                        android:layout_weight="0.5"
                        android:textSize="20sp"
                        android:textColor="#24163f"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="May 6th, 2016"
                        android:id="@+id/eventDate"
                        android:layout_weight="0.5"
                        android:textSize="15sp"
                        android:textColor="#24163f"/>

                </LinearLayout>

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="$25.00"
                        android:id="@+id/eventPrice"
                        android:layout_alignParentRight="true"
                        android:layout_weight="0.5"
                        android:textSize="18sp"
                        android:textColor="#24163f"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1.0km"
                        android:id="@+id/eventDistance"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_weight="0.5"
                        android:layout_marginBottom="4dp"
                        android:textColor="#24163f"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/distIcon"
                        android:layout_toLeftOf="@+id/eventDistance"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="7dp"
                        android:src="@color/caldroid_black"
                        />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</com.daimajia.swipe.SwipeLayout>