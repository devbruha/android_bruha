    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B4000000"
        android:id="@+id/MapMainLayout"
        >


        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:id="@+id/MapEventPicture"
            android:src="#4565fe2b"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:paddingLeft="10dp"
            android:layout_alignParentEnd="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hamilton Bull Dogs - @home"
            android:id="@+id/MapEventName"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_above="@+id/MapEventPicture"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$32.0"
            android:id="@+id/MapEventPrice"
            android:layout_above="@+id/MapEventPicture"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Ontario Place"
            android:id="@+id/MapEventLocName"
            android:layout_below="@+id/MapEventName"
            android:layout_toRightOf="@+id/MapEventPicture"
            android:layout_toEndOf="@+id/MapEventPicture"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 Bay St. North"
            android:id="@+id/MapEventLocSt"
            android:layout_below="@+id/MapEventLocName"
            android:layout_toRightOf="@+id/MapEventPicture"
            android:layout_toEndOf="@+id/MapEventPicture"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hamilton, ON"
            android:id="@+id/MapEventLocAddress"
            android:layout_below="@+id/MapEventLocSt"
            android:layout_toRightOf="@+id/MapEventPicture"
            android:layout_toEndOf="@+id/MapEventPicture"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friday May 21, 2015 at 7:00 pm"
            android:id="@+id/MapEventStartDateAndTime"
            android:layout_alignBottom="@+id/MapEventPicture"
            android:layout_toRightOf="@+id/MapEventPicture"
            android:layout_toEndOf="@+id/MapEventPicture"
            android:textColor="#ffffff"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold" />

    </RelativeLayout>

</com.daimajia.swipe.SwipeLayout>