    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grey_gradient"
        android:id="@+id/VenueMainLayout"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/VenuePicture"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:scaleType="fitXY"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/VenueImageBubble"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/round"
            android:alpha=".95"
            android:focusable="false"
            android:layout_weight="5"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Venue Name"
            android:id="@+id/VenueName"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:textSize="20dp"
            android:paddingBottom="8dp"
            android:textColor="#ffffff" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swipe"
            android:id="@+id/VenueDistance"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/VenueName"
            android:visibility="invisible"
            android:textSize="12dp"
            android:textColor="#ffffff"
            android:layout_marginTop="11dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/VAOIcon"
            android:layout_alignTop="@+id/VenueImageBubble"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:paddingBottom="8dp"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#46bec2"
            android:alpha="0.95"
            android:id="@+id/VenueDescriptionLayout"
            android:layout_alignTop="@+id/VenueImageBubble"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/VenueImageBubble"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name Of Venue"
                android:id="@+id/DesVenueName"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="20dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:textColor="#ffffff" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details on next release!"
                android:id="@+id/DesVenueLocName"
                android:layout_below="@+id/DesVenueName"
                android:textSize="15dp"
                android:paddingLeft="5dp"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text=" "
                android:id="@+id/DesVenueLocStreet"
                android:layout_below="@+id/DesVenueLocName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="5dp"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:id="@+id/DesVenueLocAddress"
                android:textSize="15dp"
                android:layout_below="@+id/DesVenueLocName"
                android:layout_toEndOf="@+id/DesVenueLocStreet"
                android:paddingLeft="5dp"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hours:"
                android:id="@+id/VenueHourText"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_below="@+id/DesVenueLocAddress"
                android:layout_alignParentLeft="true"
                android:paddingLeft="5dp"
                android:layout_alignParentStart="true"
                android:textColor="#ffffff"
